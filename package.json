  },
  "peerDependencies": {
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/common": "^10.2.7",
    "zod": "^3.22.4",
    "graphql-scalars": "^1.22.4"
  },
  "devDependencies": {
    "release-it": "*",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/jest": "29.5.5",
    "@types/node": "^20.8.6"
  }
